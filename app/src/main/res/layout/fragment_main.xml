<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragments.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">


                <TextView
                    android:textSize="@dimen/text_large"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:padding="@dimen/space_normal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imgSettings"
                    android:tint="@color/white"
                    android:layout_marginEnd="@dimen/space_large"
                    android:src="@drawable/ic_settings"
                    android:layout_width="@dimen/img_back"
                    android:layout_height="@dimen/img_back"
                    tools:ignore="ContentDescription" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_large">

            <TextView
                android:id="@+id/tvIp"
                android:textSize="18sp"
                android:padding="@dimen/space_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnGrp1a"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 1 A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnGrp1b"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 1 B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnGrp2a"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 2 A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnGrp2b"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 2 B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn3a"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 3 A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn3b"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 3 B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn3c"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 3 C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/btn4a"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 4 A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn5b"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 5 B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn6a"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:text="Group 6 A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>